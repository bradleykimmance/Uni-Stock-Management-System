<% include ../partials/header %>

<div class="wrapper">

    <nav id="sidebar">
        <!-- Sidebar Links -->
        <ul class="list-unstyled components">
            <li><a href="/user">Dashboard</a></li>
            <li><a href="/customers">Customers</a></li>
            <li class="active"><a href="/stock">Stock</a></li>
            <li><a href="/invoices">Invoices</a></li>
            <li><a href="/creditnotes">Credit Notes</a></li>
            <li><a href="/offers">Offers</a></li>
            <li><a href="/reports">Reports</a></li>
        </ul>
    </nav>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Stock</h1>
            </div>
        </header>

        <table class="generalTable">
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Currency</th>
                <th>Cost</th>
                <th>Date Bought</th>
                <th>Bought From</th>
            </tr>
            <% stock.forEach(function(stock){ %>
            <tr>
                <td><%=stock.productName%></td>
                <td><%=stock.quantityStockCurrent%></td>
                <td><%=stock.currencyName%></td>
                <td><%=stock.priceBought%></td>
                <td><%=('0' + stock.boughtDate.getDate()).slice(-2) +'/'+ ('0' + (stock.boughtDate.getMonth()+1)).slice(-2) +'/'+ stock.boughtDate.getFullYear()%></td>
                <td><%=stock.customerBusiness%></td>
            </tr>
            <% }) %>
        </table>
<% include ../partials/footer %>