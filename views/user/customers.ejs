<% include ../partials/header %>

<div class="wrapper">

    <nav id="sidebar">
        <!-- Sidebar Links -->
        <ul class="list-unstyled components">
            <li><a href="/user">Dashboard</a></li>
            <li class="active"><a href="/customers">Customers</a></li>
            <li><a href="#">Stock</a></li>
