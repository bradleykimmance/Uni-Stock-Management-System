<% include ../partials/header %>

<div class="wrapper">

    <nav id="sidebar">
        <!-- Sidebar Links -->
        <ul class="list-unstyled components">
            <li><a href="/user">Dashboard</a></li>
            <li class="active"><a href="/customers">Customers</a></li>
            <li><a href="/stock">Stock</a></li>
            <li><a href="/invoices">Invoices</a></li>
            <li><a href="/creditnotes">Credit Notes</a></li>
            <li><a href="/offers">Offers</a></li>
            <li><a href="/reports">Reports</a></li>
        </ul>
    </nav>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Customer List</h1>
            </div>
        </header>
        <p>
            <a class = "button button-primary" href ="/customers/new">Add New Customer</a>
        </p>

        <table id="customerTable">
            <tr>
                <th>Business Name</th>
                <th>Address Line 1</th>
                <th>Address Line 2</th>
                <th>Country</th>
                <th>VAT Number</th>
                <th>Email</th>
            </tr>
            <% customers.forEach(function(customer){ %>
                <tr>
                    <td><%=customer.customerBusiness%></td>
                    <td><%=customer.customerAddress1%></td>
                    <td><%=customer.customerAddress2%></td>
                    <td><%=customer.customerCountry%></td>
                    <td><%=customer.customerVAT%></td>
                    <td><%=customer.customerEmail%></td>
                </tr>
            <% }) %>
        </table>
    </div>
</div>

<% include ../partials/footer %>