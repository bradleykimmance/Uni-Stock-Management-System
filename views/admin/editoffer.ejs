<% include ../partials/adminHeader %>

<div class="wrapper">

    <nav id="sidebar">
        <!-- Sidebar Links -->
        <ul class="list-unstyled components">
            <li><a href="/admin/home">Dashboard</a></li>
            <li><a href="/admin/customers">Customers</a></li>
            <li><a href="/admin/stock">Stock</a></li>
            <li><a href="/admin/invoices">Invoices</a></li>
            <li><a href="/admin/creditnotes">Credit Notes</a></li>
            <li class="active"><a href="/admin/offers">Offers</a></li>
            <li><a href="/admin/reports">Reports</a></li>
            <li><a href="/admin/users">Users</a></li>
            <li><a href="/admin/currencies">Currencies</a></li>
            <li><a href="/admin/products">Products</a></li>
            <li><a href="/admin/positions">Positions</a></li>
        </ul>
    </nav>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Edit Offer</h1>
            </div>
        </header>


    <form class = "form-center" action="/admin/offers/edit" method="POST">
        <input type="hidden" name="offerID" value="<%=offerID%>">
        <div class="form-group row">
            <label for="offer_productID" class="col-2 col-form-label">Select Product:</label>
            <div class="col-4">
                <select class="form-control" name="offer_productID" required>
                    <% product.forEach(function(product){ %>
                    <option <%if(offer_productID === product.productID){%>selected<%}else{}%> value ="<%= product.productID%>" > <%= product.productName%> </option>
                    <%})%>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="quantityOffer" class="col-2 col-form-label">Quantity:</label>
            <div class="col-4">
                <input type="number" class="form-control" name = "quantityOffer" value="<%=quantityOffer%>" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="offer_currencyID" class="col-2 col-form-label">Select Currency:</label>
            <div class="col-4">
                <select class="form-control" name="offer_currencyID" required>
                    <% currency.forEach(function(currency){ %>
                    <option <%if(offer_currencyID === currency.currencyID){%>selected<%}else{}%> value ="<%= currency.currencyID%>" > <%= currency.currencyName%> </option>
                    <%})%>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="priceOffer" class="col-2 col-form-label">Price Offer:</label>
            <div class="col-4">
                <input type="text" class="form-control" name = "priceOffer" value="<%=priceOffer%>" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="offer_customerID" class="col-2 col-form-label">Offer From:</label>
            <div class="col-4">
                <select class="form-control" name="offer_customerID" required>
                    <% customer.forEach(function(customer){ %>
                    <option <%if(offer_customerID === customer.customerID){%>selected<%}else{}%> value ="<%= customer.customerID%>" > <%= customer.customerBusiness%> </option>
                    <%})%>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="dateOffer" class="col-2 col-form-label">Date of Offer:</label>
            <div class="col-4">
                <input type="date" class="form-control" name = "dateOffer" value="<%= dateOffer.getFullYear()+'-'+ ('0' +(dateOffer.getMonth()+1)).slice(-2)+'-'+('0' +dateOffer.getDate()).slice(-2)%>" required>
            </div>
        </div>
        <button class = "button button-primary button-form">Submit!</button>
    </form>


<% include ../partials/footer %>