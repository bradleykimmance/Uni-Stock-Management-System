<% include ../partials/adminHeader %>

<div class="wrapper">

    <nav id="sidebar">
        <!-- Sidebar Links -->
        <ul class="list-unstyled components">
            <li><a href="/admin/home">Dashboard</a></li>
            <li class="active"><a href="/admin/customers">Customers</a></li>
            <li><a href="/admin/stock">Stock</a></li>
            <li><a href="/admin/invoices">Invoices</a></li>
            <li><a href="/admin/creditnotes">Credit Notes</a></li>
            <li><a href="/admin/offers">Offers</a></li>
            <li><a href="/admin/reports">Reports</a></li>
            <li><a href="/admin/users">Users</a></li>
            <li><a href="/admin/currencies">Currencies</a></li>
            <li><a href="/admin/products">Products</a></li>
            <li><a href="/admin/positions">Positions</a></li>
        </ul>
    </nav>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Customer List</h1>
            </div>
        </header>
        <p>
            <a class = "button button-primary" href ="/admin/customers/new">Add New Customer</a>
        </p>

        <table class="generalTable">
            <tr>
                <th>Business Name</th>
                <th>Address Line 1</th>
                <th>Address Line 2</th>
                <th>Country</th>
                <th>VAT Number</th>
                <th>Email</th>
            </tr>
            <% customers.forEach(function(customer){ %>
                <tr>
                    <td><%=customer.customerBusiness%></td>
                    <td><%=customer.customerAddress1%></td>
                    <td><%=customer.customerAddress2%></td>
                    <td><%=customer.customerCountry%></td>
                    <td><%=customer.customerVAT%></td>
                    <td><%=customer.customerEmail%></td>
                    <td>
                        <div>
                            <a class="editButton" href='/admin/customers/edit/<%= customer.customerID %>'>Edit</a>
                        </div>
                    </td>
                </tr>
            <% }) %>
        </table>



<% include ../partials/footer %>