    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Edit Product</h1>
            </div>
        </header>


    <form class = "form-center" action="/admin/products/edit" method="POST">
        <form class = "form-center" action="/admin/products" method="POST">
            <div class="form-group row">
                <input type="hidden" name="productID" value="<%=productID%>">
                <label for="productName" class="col-2 col-form-label">Product Name:</label>
                <div class="col-4">
                    <input type="text" class="form-control" name = "productName" value="<%= productName%>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="productState" class="col-2 col-form-label">Product State:</label>
                <div class="col-4">
                    <input type="text" class="form-control" name = "productState" value="<%= productState%>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="productPlatform" class="col-2 col-form-label">Product Platform:</label>
                <div class="col-4">
                    <input type="text" class="form-control" name = "productPlatform" value="<%= productPlatform%>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="productCategory" class="col-2 col-form-label">Product Category</label>
                <div class="col-4">
                    <input type="text" class="form-control" name = "productCategory" value="<%= productCategory%>" required>
                </div>
            </div>
        <button class = "button button-primary button-form">Submit!</button>
    </form>


