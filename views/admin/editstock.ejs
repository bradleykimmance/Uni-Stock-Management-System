<% include ../partials/adminHeader %>

<div class="wrapper">

    <nav id="sidebar">
        <!-- Sidebar Links -->
        <ul class="list-unstyled components">
            <li><a href="/admin/home">Dashboard</a></li>
            <li><a href="/admin/customers">Customers</a></li>
            <li class="active"><a href="/admin/stock">Stock</a></li>
            <li><a href="/admin/invoices">Invoices</a></li>
            <li><a href="/admin/creditnotes">Credit Notes</a></li>
            <li><a href="/admin/offers">Offers</a></li>
            <li><a href="/admin/reports">Reports</a></li>
            <li><a href="/admin/users">Users</a></li>
            <li><a href="/admin/currencies">Currencies</a></li>
            <li><a href="/admin/products">Products</a></li>
            <li><a href="/admin/positions">Positions</a></li>
        </ul>
    </nav>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Edit Stock</h1>
            </div>
        </header>


    <form class = "form-center" action="/admin/stock/edit" method="POST">
        <input type="hidden" name="stockID" value="<%=stockID%>">
        <div class="form-group row">
            <label for="stock_productID" class="col-2 col-form-label">Select Product:</label>
            <div class="col-4">
                <select class="form-control" name="stock_productID" required>
                    <% product.forEach(function(product){ %>
                    <option <%if(stock_productID === product.productID){%>selected<%}else{}%> value ="<%= product.productID%>" > <%= product.productName%> </option>
                    <%})%>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="quantityStockCurrent" class="col-2 col-form-label">Quantity:</label>
            <div class="col-4">
                <input type="number" class="form-control" name = "quantityStockCurrent" value="<%=quantityStockCurrent%>" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="stock_currencyID" class="col-2 col-form-label">Select Currency:</label>
            <div class="col-4">
                <select class="form-control" name="stock_currencyID" required>
                    <% currency.forEach(function(currency){ %>
                    <option <%if(stock_currencyID === currency.currencyID){%>selected<%}else{}%> value ="<%= currency.currencyID%>" > <%= currency.currencyName%> </option>
                    <%})%>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="priceBought" class="col-2 col-form-label">Price:</label>
            <div class="col-4">
                <input type="text" class="form-control" name = "priceBought" value="<%=priceBought%>" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="stock_customerID" class="col-2 col-form-label">Bought From:</label>
            <div class="col-4">
                <select class="form-control" name="stock_customerID" required>
                    <% customer.forEach(function(customer){ %>
                    <option <%if(stock_customerID === customer.customerID){%>selected<%}else{}%> value ="<%= customer.customerID%>" > <%= customer.customerBusiness%> </option>
                    <%})%>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="boughtDate" class="col-2 col-form-label">Date of Purchase:</label>
            <div class="col-4">
                <input type="date" class="form-control" name = "boughtDate" value="<%= boughtDate.getFullYear()+'-'+ ('0' +(boughtDate.getMonth()+1)).slice(-2)+'-'+('0' +boughtDate.getDate()).slice(-2)%>" required>
            </div>
        </div>
        <button class = "button button-primary button-form">Submit!</button>
    </form>


<% include ../partials/footer %>